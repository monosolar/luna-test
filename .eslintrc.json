{
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "require": true,
      "Promise": true,
      "module": true,
      "process": true,
      "__dirname": true,
      "Buffer": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "jest",
      "react",
      "react-hooks"
    ],
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React",
        "version": "16.0"
      },
      "propWrapperFunctions": [
        "forbidExtraProps"
      ]
    },
    "rules": {
      "strict": 0,
      "prettier/prettier": ["warn", { 
          "singleQuote": true,
          "jsxSingleQuote": true,
          "endOfLine": "auto",
          "semi": false,
          "printWidth": 90,
          "trailingComma": "es5",
          "arrowParens": "avoid"
          }],
      "react/prop-types": 0,
      "arrow-body-style": 0,
      "arrow-parens": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js", ".jsx"
          ]
        }
      ],

      "react/jsx-first-prop-new-line": [2, "multiline"],
      "react/jsx-max-props-per-line": [
        1,
        { 
          "maximum": 1, 
          "when": "multiline" 
        }
      ],
   

      "import/no-unresolved": 0,
      "no-console": [
        "warn",
        {
          "allow": [
            "info",
            "error",
            "warn",
            "debug"
          ]
        }
      ],
      "react/jsx-uses-react": "warn",
      "indent": [
        "warn",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "warn",
        "unix"
      ],
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "never"
      ],
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": false,
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ],
      "no-multiple-empty-lines": [
        "warn",
        {
          "max": 3
        }
      ],
      "react-hooks/rules-of-hooks": 2,
      "react-hooks/exhaustive-deps": 1,
      "space-before-function-paren": [
        "warn",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  }
